{
  "name": "writerly-vscode-extension",
  "icon": "logo.png",
  "displayName": "Writerly",
  "description": "Writerly support for VS Code",
  "version": "0.0.35",
  "publisher": "TabbyNotes",
  "author": {
    "name": "Chaker Atallah"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "repository": {
    "url": "https://github.com/vistuleB/writerly-vscode-extension.git"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:writerly"
  ],
  "main": "./out/extension",
  "contributes": {
    "languages": [
      {
        "id": "writerly",
        "aliases": [
          "Writerly",
          "writerly"
        ],
        "extensions": [
          ".writerly",
          ".wly"
        ],
        "configuration": "./writerly.configuration.json"
      }
    ],
    "commands": [],
    "grammars": [
      {
        "language": "writerly",
        "scopeName": "source.writerly",
        "path": "./syntaxes/writerly.json"
      }
    ],
    "configurationDefaults": {
      "editor.tokenColorCustomizations": {
        "[*]": {
          "textMateRules": [
            {
              "scope": "markup.raw.block.wly",
              "settings": {
                "foreground": "#228B22"
              }
            }
          ]
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "dependencies": {
    "cross-spawn": "^7.0.3",
    "glob": "^10.3.10",
    "which": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "20.x",
    "@types/vscode": "^1.74.0",
    "@vscode/vsce": "^2.22.0",
    "typescript": "^5.3.3"
  }
}
