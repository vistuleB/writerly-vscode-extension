{
  "name": "writerly-vscode-extension",
  "icon": "logo.png",
  "displayName": "Writerly",
  "description": "Writerly support for VS Code with file navigation - open images, documents, and files under cursor",
  "version": "0.0.66",
  "publisher": "TabbyNotes",
  "author": {
    "name": "Chaker Atallah"
  },
  "engines": {
    "vscode": "^1.106.0"
  },
  "repository": {
    "url": "https://github.com/vistuleB/writerly-vscode-extension.git"
  },
  "categories": [
    "Other",
    "Programming Languages"
  ],
  "keywords": [
    "writerly",
    "file navigation",
    "open file",
    "cursor",
    "image viewer",
    "document opener",
    "path resolver"
  ],
  "activationEvents": [],
  "main": "./out/extension",
  "contributes": {
    "languages": [
      {
        "id": "writerly",
        "aliases": [
          "Writerly",
          "writerly"
        ],
        "extensions": [
          ".writerly",
          ".wly"
        ],
        "configuration": "./writerly.configuration.json"
      }
    ],
    "configuration": {
      "title": "Writerly",
      "properties": {
        "writerly.enableUnusedHandleWarnings": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable warnings for unused handle definitions."
        }
      }
    },
    "grammars": [
      {
        "language": "writerly",
        "scopeName": "source.writerly",
        "path": "./syntaxes/writerly.json"
      }
    ],
    "commands": [
      {
        "command": "writerly.openUnderCursorWithDefault",
        "title": "Open File Under Cursor With Default",
        "category": "Writerly"
      },
      {
        "command": "writerly.openUnderCursorWithVSCode",
        "title": "Open File Under Cursor With VSCode",
        "category": "Writerly"
      },
      {
        "command": "writerly.openUnderCursorAsImageWithVSCode",
        "title": "Open File Under Cursor As Image With VSCode",
        "category": "Writerly"
      },
      {
        "command": "writerly.openResolvedPath",
        "title": "---",
        "category": "Writerly"
      },
      {
        "command": "writerly.restart",
        "title": "Restart Extension",
        "category": "Writerly"
      }
    ],
    "keybindings": [
      {
        "command": "writerly.openUnderCursorWithDefault",
        "key": "ctrl+shift+o",
        "mac": "cmd+shift+o",
        "when": "editorTextFocus && editorLangId == writerly"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "writerly.openUnderCursorWithDefault",
          "when": "editorLangId == writerly",
          "group": "navigation@1"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "wly-explorer",
          "title": "WLY Explorer",
          "icon": "logo_outline.svg"
        }
      ]
    },
    "views": {
      "wly-explorer": [
        {
          "id": "wlyFiles",
          "name": "WLY Files in Workspace"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "compile-watch": "onchange 'src/**/*.ts' -- npm run compile"
  },
  "dependencies": {
    "cross-spawn": "^7.0.6",
    "glob": "^10.3.10",
    "which": "^4.0.0"
  },
  "devDependencies": {
    "@types/cross-spawn": "6.0.6",
    "@types/node": "20.x",
    "@types/vscode": "^1.106.1",
    "@vscode/vsce": "^2.22.0",
    "onchange": "^7.1.0",
    "typescript": "^5.3.3"
  }
}
