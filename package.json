{
  "name": "writerly-vscode-extension",
  "icon": "logo.png",
  "displayName": "Writerly",
  "description": "Writerly support for VS Code with file navigation - open images, documents, and files under cursor",
  "version": "0.0.37",
  "publisher": "TabbyNotes",
  "author": {
    "name": "Chaker Atallah"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "repository": {
    "url": "https://github.com/vistuleB/writerly-vscode-extension.git"
  },
  "categories": [
    "Other",
    "Programming Languages"
  ],
  "keywords": [
    "writerly",
    "file navigation",
    "open file",
    "cursor",
    "image viewer",
    "document opener",
    "path resolver"
  ],
  "activationEvents": [
    "onLanguage:writerly"
  ],
  "main": "./out/extension",
  "contributes": {
    "languages": [
      {
        "id": "writerly",
        "aliases": [
          "Writerly",
          "writerly"
        ],
        "extensions": [
          ".writerly",
          ".wly"
        ],
        "configuration": "./writerly.configuration.json"
      }
    ],
    "commands": [
      {
        "command": "writerly.openFileUnderCursor",
        "title": "Open File Under Cursor",
        "category": "Writerly"
      }
    ],
    "keybindings": [
      {
        "command": "writerly.openFileUnderCursor",
        "key": "ctrl+shift+o",
        "mac": "cmd+shift+o",
        "when": "editorTextFocus && editorLangId == writerly"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "writerly.openFileUnderCursor",
          "when": "editorLangId == writerly",
          "group": "navigation@1"
        }
      ]
    },
    "grammars": [
      {
        "language": "writerly",
        "scopeName": "source.writerly",
        "path": "./syntaxes/writerly.json"
      }
    ],
    "configurationDefaults": {
      "editor.tokenColorCustomizations": {
        "[*]": {
          "textMateRules": [
            {
              "scope": "markup.raw.block.wly",
              "settings": {
                "foreground": "#228B22"
              }
            }
          ]
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "dependencies": {
    "cross-spawn": "^7.0.3",
    "glob": "^10.3.10",
    "which": "^4.0.0"
  },
  "devDependencies": {
    "@types/cross-spawn": "^6.0.6",
    "@types/node": "20.x",
    "@types/vscode": "^1.74.0",
    "@vscode/vsce": "^2.22.0",
    "typescript": "^5.3.3"
  }
}
