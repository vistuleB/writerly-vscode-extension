{
  "name": "writerly-vscode-extension",
  "icon": "logo.png",
  "displayName": "Writerly",
  "description": "Writerly support for VS Code",
  "version": "0.0.10",
  "publisher": "TabbyNotes",
  "author": {
    "name": "Chaker Atallah"
  },
  "engines": {
    "vscode": "^1.25.0"
  },
  "repository": {
    "url": "https://github.com/vistuleB/writerly-vscode-extension.git"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension",
  "contributes": {
    "languages": [
      {
        "id": "writerly",
        "aliases": [
          "Writerly",
          "writerly"
        ],
        "extensions": [
          ".writerly",
          ".wly"
        ],
        "configuration": "./writerly.configuration.json"
      }
    ],
    "commands": [],
    "grammars": [
      {
        "language": "writerly",
        "scopeName": "source.writerly",
        "path": "./syntaxes/writerly.json"
      }
    ],
    "configurationDefaults": {
      "editor.tokenColorCustomizations": {
        "[*]": {
          "textMateRules": [
            {
              "scope": "markup.raw.block.wly",
              "settings": {
                "foreground": "#228B22"
              }
            }
          ]
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -p ./",
    "watch": "tsc -w -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "dependencies": {
    "cross-spawn": "^6.0.5",
    "glob": "^7.1.4",
    "which": "^1.3.1"
  },
  "devDependencies": {
    "@types/node": "^16.18.126",
    "tslint": "^5.11.0",
    "typescript": "^4.9.5",
    "vscode": "^1.1.18"
  }
}
